<%= form_with model: [ @album, @album.comments.build ] do |form|%> 
<p>
    <%= form.label :commenter %> :<br>
    <%= form.text_field :commenter , class:"form-control"%>
</p>
<p>
    <%= form.label :body %> :<br>
    <%= form.text_area :body , class:"form-control" , style:"resize: none"%>
</p>
<p>
    <%= form.submit class:"btn btn-info"%>
    <%= link_to 'Back',albums_path, class:"btn btn-secondary ml-3"%>
</p>
<%end %>